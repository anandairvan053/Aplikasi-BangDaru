<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerPanjangActivity"
    android:orientation="vertical"
    android:background="@drawable/menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00B89E">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/persegipanjang" />

        <TextView
            android:id="@+id/txtperpanjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Persegi Panjang"
            android:textColor="#E5FFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/txtperpanjang"
            android:text="Keliling dan Luas"
            android:textColor="#E5FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/gbrperpanjang"
                    android:layout_width="match_parent"
                    android:layout_height="202dp"
                    android:src="@drawable/rumus_persegipanjang"/>

                <TextView
                    android:id="@+id/txtpanjangpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gbrperpanjang"
                    android:layout_marginTop="10dp"
                    android:text="Panjang"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etpanjangpp"
                    android:layout_width="293dp"
                    android:layout_height="38dp"
                    android:layout_below="@id/gbrperpanjang"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/txtkelilingpp"
                    android:background="#009688"
                    android:inputType="number"
                    android:hint="Masukkan Panjang"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/txtlebargpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtpanjangpp"
                    android:layout_marginTop="20dp"
                    android:text="Lebar"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etlebarpp"
                    android:layout_width="293dp"
                    android:layout_height="38dp"
                    android:layout_below="@id/etpanjangpp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/txtkelilingpp"
                    android:background="#009688"
                    android:hint="Masukkan Lebar"
                    android:inputType="number"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnHitungpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etlebarpp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#000000"
                    android:text="Hitung"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtHasil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnHitungpp"
                    android:layout_marginTop="10dp"
                    android:text="Hasil"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtkelilingpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHasil"
                    android:layout_marginTop="20dp"
                    android:text="Keliling"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txthslkelilingpp"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHasil"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/txtkelilingpp"
                    android:background="#009688"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtluaspp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtkelilingpp"
                    android:layout_marginTop="30dp"
                    android:text="Luas"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txthsluaspp"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txthslkelilingpp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/txtkelilingpp"
                    android:background="#009688"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>