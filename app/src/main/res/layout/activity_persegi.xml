<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersegiActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bgdbd">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/persegi" />

        <TextView
            android:id="@+id/txtpersegi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Persegi"
            android:textColor="#E5FFFF"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtpersegi"
            android:text="Keliling dan Luas"
            android:textColor="#E5FFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/gbrpersegi"
                    android:layout_width="match_parent"
                    android:layout_height="202dp"
                    android:src="@drawable/rumus_persegi" />

                <TextView
                    android:id="@+id/txtsisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gbrpersegi"
                    android:layout_marginTop="10dp"
                    android:text="Sisi"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etsisi"
                    android:layout_width="293dp"
                    android:layout_height="38dp"
                    android:layout_below="@id/gbrpersegi"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/txtkeliling"
                    android:background="#009688"
                    android:hint="Masukkan Panjang sisi"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnHitungblk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etsisi"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#000000"
                    android:text="Hitung"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtHasil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnHitungblk"
                    android:layout_marginTop="10dp"
                    android:text="Hasil"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtkeliling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHasil"
                    android:layout_marginTop="20dp"
                    android:text="Keliling"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txthslkll"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHasil"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/txtkeliling"
                    android:background="#009688"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtluas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtkeliling"
                    android:layout_marginTop="30dp"
                    android:text="Luas"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txthslluasblk"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txthslkll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/txtkeliling"
                    android:background="#009688"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>