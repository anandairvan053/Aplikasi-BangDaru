<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:orientation="vertical"
    tools:context=".FifthActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B22222">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/tandaseru2" />

        <TextView
            android:id="@+id/txtbgndtr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="TENTANG APLIKASI"
            android:textColor="#E5FFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtbgndtr"
            android:layout_marginLeft="20dp"
            android:text="Dashboard"
            android:textColor="#E5FFFF"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tbKrl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:strokeColor="#B22222"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="TENTANG APLIKASI"
                                android:textAllCaps="true"
                                android:textColor="#B22222"
                                android:textSize="19sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Nama Aplikasi"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/noResiCTK"
                                android:layout_width="match_parent"
                                android:text="BangDaru"
                                android:layout_height="25dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical"
                                android:text="Rilis"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tanggalRilis"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:text="1 Oktober 2021"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="8dp"
                                android:text="Front-End"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/namaFrontend"
                                android:layout_width="match_parent"
                                android:text="Fadiyatul Muqtashidah \nVina Maulidiya Agustin"
                                android:layout_height="50dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Back-End"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/namaBackend"
                                android:layout_width="match_parent"
                                android:text="Ananda Irvan Tri Kurniawan \nIlham Bahri Albi"
                                android:layout_height="50dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Dikembangan oleh"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/Pengembang"
                                android:layout_width="match_parent"
                                android:text="Kelompok 7 Pemrograman Mobile PTI 2020 A\nUniversitas Negeri Surabaya"
                                android:layout_height="50dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/kembali"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp"
                        android:onClick="buttonkembali"
                        android:layout_marginRight="24dp"
                        android:text="Kembali"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:backgroundTint="#B22222"
                        app:cornerRadius="50dp" />
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>